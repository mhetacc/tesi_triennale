{
    "latex-workshop.latex.outDir": "%WORKSPACE_FOLDER%/build",
    "latex-workshop.latex.autoBuild.run": "never",
    "window.zoomLevel": -1,
    "editor.wordWrap": "on",
    "macros": {
        "insertItalic": [
            {
                "command": "type",
                "args": {
                    "text": "\\textit{}"
                }
            },
            "cursorLeft"
        ],
        "insertCode":[
            {
                "command": "type",
                "args": {
                    "text": "\\verb++"
                }
            },
            "cursorsLeft",
            "cursorLeft"
        ]
    }
}
