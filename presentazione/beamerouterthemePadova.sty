\mode<presentation>

% Image definitions
% ==============================================================================
\pgfdeclareimage[width=\paperwidth]{titleBackground}{bg}
\pgfdeclareimage[width=\paperwidth]{pageBackground}{bgWave}
\pgfdeclareimage[width=4cm]{logoUnipd}{unipd_logo}
\pgfdeclareimage[width=2cm]{logoUnipdWhite}{unipd_logo_white}


% Actual beamer definitions
% ==============================================================================

\defbeamertemplate*{title page}{pd theme} {
	\centering\usebeamerfont{title}\usebeamercolor[fg]{title}\inserttitle\par
	\ifx\insertsubtitle\@empty
	\else
		\vskip1.5ex
		{\centering\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par}
	\fi
	\ifx\insertauthor\@empty
	\else
		\vskip1.5ex
		{\centering\usebeamerfont{author}\usebeamercolor[fg]{author}\insertauthor\par}
	\fi
	\ifx\insertdate\@empty
	\else
		{\centering\usebeamerfont{date}\usebeamercolor[fg]{date}\insertdate\par}
	\fi
	\vfill
}


\defbeamertemplate*{background canvas}{pd theme} {
	\ifnum\c@framenumber=1
		\pgfuseimage{titleBackground}
	\fi
}


\defbeamertemplate*{footline}{pd theme} {
  \ifnum\c@framenumber=1
    \ifbeamerpadovanologos
      \pgftext[right,bottom,at=\pgfpoint{0.95\paperwidth}{.4cm}]{\pgfuseimage{logoUnipd}}
    \fi
  \else
    \ifbeamerpadovanologos
      \pgftext[right,bottom,at=\pgfpoint{0.97\paperwidth}{0.896\paperheight}]{\pgfuseimage{logoUnipdWhite}}
    \fi
    \pgftext[right,bottom,at=\pgfpoint{\paperwidth}{0cm}]{\pgfuseimage{pageBackground}}
    \pgftext[right,bottom,at=\pgfpoint{0.855\paperwidth}{0.02\paperheight}]{
      \usebeamerfont{author in foot}
      \usebeamercolor[fg]{author in foot}\insertshortauthor{} \qquad
      \usebeamerfont{title in foot}
      \usebeamercolor[fg]{title in foot}\insertshorttitle{}
    }
    \pgftext[right,bottom,at=\pgfpoint{0.98\paperwidth}{0.02\paperheight}]{
      \usebeamerfont{frame number in foot}
      \usebeamercolor[fg]{frame number in foot}\insertframenumber{} of \inserttotalframenumber
    }
  \fi
}


\mode
<all>